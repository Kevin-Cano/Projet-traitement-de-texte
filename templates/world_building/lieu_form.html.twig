{% block javascripts %}
    {{ parent() }}
    <script>
        // Gestion du formulaire
        document.addEventListener('DOMContentLoaded', function() {
            // Compteur de caract√®res pour la description
            const descInput = document.getElementById('description');
            const descCount = document.getElementById('descCount');
            
            descInput.addEventListener('input', function() {
                const length = this.value.length;
                descCount.textContent = length;
                
                if (length > 500) {
                    descCount.style.color = '#dc3545';
                } else if (length > 400) {
                    descCount.style.color = '#ffc107';
                } else {
                    descCount.style.color = '#6c757d';
                }
            });
            
            // Mise √† jour automatique de l'aper√ßu position
            document.getElementById('coord_x').addEventListener('input', updateCoordPreview);
            document.getElementById('coord_y').addEventListener('input', updateCoordPreview);
        });
        
        function selectType(type) {
            // Mettre √† jour la s√©lection visuelle
            document.querySelectorAll('.type-option').forEach(el => el.classList.remove('selected'));
            document.querySelector(`[data-type="${type}"]`).classList.add('selected');
            
            // Mettre √† jour le champ cach√©
            document.getElementById('type').value = type;
        }
        
        function updateCoordPreview() {
            const x = document.getElementById('coord_x').value;
            const y = document.getElementById('coord_y').value;
            const preview = document.querySelector('.coordinates-preview');
            
            if (x && y) {
                preview.classList.add('has-coords');
                preview.innerHTML = `
                    <div>
                        <i class="bi bi-geo-alt-fill" style="color: #2e7d32; font-size: 2rem;"></i>
                        <br>Position: ${x}, ${y}
                    </div>
                `;
            } else {
                preview.classList.remove('has-coords');
                preview.innerHTML = `
                    <div class="text-muted">
                        <i class="bi bi-geo-alt" style="font-size: 2rem;"></i>
                        <br>Cliquez pour positionner sur la carte
                    </div>
                `;
            }
        }
        
        function openMapSelector() {
            // Ouvrir une mini-carte pour s√©lectionner la position
            // Pour l'instant, juste focus sur les champs de coordonn√©es
            document.getElementById('coord_x').focus();
        }
        
        function confirmDelete() {
            if (confirm('√ätes-vous s√ªr de vouloir supprimer ce lieu ?\n\nCette action est irr√©versible et supprimera aussi toutes les r√©f√©rences √† ce lieu.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                {% if lieu %}
                form.action = '{{ path("app_world_building_lieu_delete", {id: lieu.id}) }}';
                {% else %}
                form.action = window.location.href.replace('/edit', '/delete');
                {% endif %}
                
                document.body.appendChild(form);
                form.submit();
            }
        }
        
        // Validation du formulaire
        document.getElementById('lieuForm').addEventListener('submit', function(e) {
            const nom = document.getElementById('nom').value.trim();
            
            if (!nom) {
                e.preventDefault();
                alert('Le nom du lieu est obligatoire');
                document.getElementById('nom').focus();
                return false;
            }
            
            if (nom.length < 2) {
                e.preventDefault();
                alert('Le nom du lieu doit contenir au moins 2 caract√®res');
                document.getElementById('nom').focus();
                return false;
            }
            
            return true;
        });
        
        // Auto-compl√©tion pour certains champs
        const climatSuggestions = ['Temp√©r√©', 'Tropical', 'Aride', 'Polaire', 'M√©diterran√©en', 'Continental', 'Oc√©anique'];
        const gouvernementSuggestions = ['Monarchie', 'R√©publique', 'D√©mocratie', 'Dictature', 'Tribu', 'Conseil des Anciens', 'Th√©ocratie'];
        
        function addAutoComplete(fieldId, suggestions) {
            const field = document.getElementById(fieldId);
            if (!field) return;
            
            field.addEventListener('input', function() {
                const value = this.value.toLowerCase();
                const matches = suggestions.filter(s => s.toLowerCase().includes(value));
                
                // Ici vous pourriez impl√©menter une dropdown d'autocompl√©tion
                // Pour l'instant, juste un titre avec les suggestions
                if (matches.length > 0 && value.length > 0) {
                    this.title = 'Suggestions: ' + matches.join(', ');
                } else {
                    this.title = '';
                }
            });
        }
        
        addAutoComplete('climat', climatSuggestions);
        addAutoComplete('gouvernement', gouvernementSuggestions);
    </script>
{% endblock %} 