{% extends 'base.html.twig' %}

{% block title %}{{ livre.titre }} - Écriture de Livre{% endblock %}

{% block stylesheets %}
<style>
    .livre-hero {
        background: linear-gradient(135deg, #007bff 0%, #6f42c1 100%);
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: white;
    }

    .livre-hero h1 {
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
    }

    .livre-stats .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .livre-stats .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .list-group-item {
        transition: background-color 0.2s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
    }

    /* Styles pour les mini-cartes de personnages */
    .character-preview {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
    }

    .character-preview:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .character-avatar-mini .avatar-placeholder {
        border: 2px solid rgba(255,255,255,0.3);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .skill-dots-mini {
        display: flex;
        gap: 2px;
        justify-content: center;
    }

    .skill-dot-mini {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background-color: #dee2e6;
    }

    .skill-dot-mini.filled {
        background-color: #ffab40;
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .livre-hero {
            padding: 1.5rem;
        }
        
        .livre-hero h1 {
            font-size: 2rem;
        }
        
        .d-flex.gap-3 {
            flex-direction: column;
            gap: 1rem !important;
        }
    }

    /* Animation des cartes */
    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .btn {
        transition: all 0.2s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    /* Styles pour les mini-moodboards */
    .moodboard-preview-mini {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        overflow: hidden;
    }

    .moodboard-preview-mini:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .moodboard-mini-preview {
        height: 120px;
        position: relative;
        overflow: hidden;
    }

    /* Mini mosaïque d'images */
    .mini-mosaic {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        height: 100%;
        gap: 1px;
        position: relative;
    }

    .mini-mosaic-item {
        overflow: hidden;
    }

    .mini-mosaic-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .mini-overlay-more {
        position: absolute;
        bottom: 2px;
        right: 2px;
        background: rgba(0,0,0,0.8);
        color: white;
        padding: 2px 6px;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: bold;
    }

    .mini-empty-moodboard {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        color: #6c757d;
    }

    .mini-empty-moodboard i {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    /* Badge personnalisé */
    .badge-sm {
        font-size: 0.7rem;
        padding: 0.25rem 0.5rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_livre_index') }}">Livres</a></li>
                <li class="breadcrumb-item active">{{ livre.titre }}</li>
            </ol>
        </nav>
        <h1 class="h2">
            <i class="bi bi-book-fill me-2 text-primary"></i>
            {{ livre.titre }}
        </h1>
        {% if livre.auteur is defined and livre.auteur %}
            <p class="text-muted mb-0">par {{ livre.auteur }}</p>
        {% endif %}
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('app_livre_edit', {id: livre.id}) }}" class="btn btn-outline-primary">
                <i class="bi bi-pencil me-2"></i>Modifier
            </a>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-plus-circle me-2"></i>Ajouter
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="{{ path('app_chapitre_new', {livreId: livre.id}) }}">
                    <i class="bi bi-file-text me-2"></i>Nouveau chapitre
                </a></li>
            </ul>
        </div>
    </div>
</div>

{% if livre.description is defined and livre.description %}
