        <!-- Auto-save functionality for editors -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Auto-save pour les √©diteurs de texte
                const editors = document.querySelectorAll('[data-editor="true"]');
                editors.forEach(editor => {
                    let saveTimeout;
                    editor.addEventListener('input', function() {
                        clearTimeout(saveTimeout);
                        saveTimeout = setTimeout(() => {
                            autoSave(editor);
                        }, 2000); // Sauvegarde apr√®s 2 secondes d'inactivit√©
                    });
                });

                function autoSave(editor) {
                    const form = editor.closest('form');
                    if (!form) return;

                    const chapitreId = form.getAttribute('data-chapitre-id');
                    if (!chapitreId) return;

                    const formData = new FormData();
                    formData.append('contenu', editor.value);

                    fetch(`/chapitre/${chapitreId}/sauvegarde-ajax`, {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showAutoSaveIndicator();
                            updateWordCount(data.nombreMots);
                        }
                    })
                    .catch(error => console.error('Erreur de sauvegarde:', error));
                }

                function showAutoSaveIndicator() {
                    const indicator = document.getElementById('autosave-indicator');
                    if (indicator) {
                        indicator.textContent = 'Sauvegard√© automatiquement';
                        indicator.className = 'text-success';
                        setTimeout(() => {
                            indicator.textContent = '';
                        }, 3000);
                    }
                }

                function updateWordCount(count) {
                    const wordCountElement = document.getElementById('word-count');
                    if (wordCountElement) {
                        wordCountElement.textContent = `${count} mots`;
                    }
                }

                // Responsive sidebar toggle
                const sidebarToggle = document.querySelector('[data-bs-toggle="collapse"]');
                if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', function() {
                        const sidebar = document.getElementById('sidebarMenu');
                        sidebar.classList.toggle('show');
                    });
                }
            });
        </script>

