{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Gestion des skill dots (système à points)
        document.querySelectorAll('.skill-dots-input').forEach(container => {
            const skillName = container.dataset.skill;
            const dots = container.querySelectorAll('.skill-dot-input');
            const hiddenInput = document.getElementById(skillName);
            const valueDisplay = document.getElementById(skillName + '_value');

            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    const value = index + 1;
                    hiddenInput.value = value;
                    valueDisplay.textContent = value + '/5';
                    
                    // Mettre à jour l'affichage visuel
                    dots.forEach((d, i) => {
                        if (i < value) {
                            d.classList.add('filled');
                        } else {
                            d.classList.remove('filled');
                        }
                    });
                });
            });
        });

        // Gestion des sliders (traits de personnalité)
        document.querySelectorAll('.trait-slider').forEach(slider => {
            const valueDisplay = document.getElementById(slider.id + '_value');
            
            slider.addEventListener('input', () => {
                valueDisplay.textContent = slider.value;
                
                // Positionner l'indicateur de valeur
                const percent = ((slider.value - slider.min) / (slider.max - slider.min)) * 100;
                valueDisplay.style.left = percent + '%';
                
                // Changer la couleur selon la valeur
                if (slider.value < -2) {
                    valueDisplay.style.background = '#dc3545'; // Rouge
                } else if (slider.value > 2) {
                    valueDisplay.style.background = '#ffc107'; // Jaune
                } else {
                    valueDisplay.style.background = '#007bff'; // Bleu
                }
            });

            // Initialiser la position
            const percent = ((slider.value - slider.min) / (slider.max - slider.min)) * 100;
            valueDisplay.style.left = percent + '%';
        });

        // Mise à jour de l'avatar en temps réel
        function updateAvatar() {
            const nom = document.getElementById('nom').value;
            const prenom = document.getElementById('prenom').value;
            const avatar = document.getElementById('avatarPreview');
            
            if (prenom) {
                avatar.textContent = prenom.charAt(0).toUpperCase();
            } else if (nom) {
                avatar.textContent = nom.charAt(0).toUpperCase();
            } else {
                avatar.textContent = '?';
            }
        }

        document.getElementById('nom').addEventListener('input', updateAvatar);
        document.getElementById('prenom').addEventListener('input', updateAvatar);
        updateAvatar(); // Initialisation
        
        // Gestion de l'upload automatique d'images
        document.getElementById('photo').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            // Vérifications côté client
            if (file.size > 5 * 1024 * 1024) {
                alert('Le fichier est trop volumineux. Maximum 5 Mo.');
                e.target.value = '';
                return;
            }
            
            if (!file.type.startsWith('image/')) {
                alert('Veuillez sélectionner une image.');
                e.target.value = '';
                return;
            }
            
            // Afficher le spinner de chargement
            document.getElementById('uploadStatus').classList.remove('d-none');
            document.getElementById('photoButtons').style.opacity = '0.5';
            
            // Prévisualiser l'image immédiatement
            const reader = new FileReader();
            reader.onload = function(e) {
                const imagePreview = document.getElementById('imagePreview');
                const avatarPreview = document.getElementById('avatarPreview');
                
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
                imagePreview.classList.remove('d-none');
                avatarPreview.style.display = 'none';
                avatarPreview.classList.add('d-none');
            };
            reader.readAsDataURL(file);
            
            // Upload automatique via AJAX
            const formData = new FormData();
            formData.append('photo', file);
            
            fetch('/personnage/{{ personnage.id }}/upload-photo', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                // Masquer le spinner
                document.getElementById('uploadStatus').classList.add('d-none');
                document.getElementById('photoButtons').style.opacity = '1';
                
                if (data.success) {
                    // Succès : mettre à jour l'interface
                    updatePhotoInterface(data.photoPath);
                    
                    // Afficher un message de succès temporaire
                    showTemporaryMessage('Photo mise à jour avec succès !', 'success');
                } else {
                    // Erreur : restaurer l'état précédent
                    handleUploadError(data.error || 'Erreur lors de l\'upload');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                document.getElementById('uploadStatus').classList.add('d-none');
                document.getElementById('photoButtons').style.opacity = '1';
                handleUploadError('Erreur de connexion');
            });
        });
    });
    
    // Fonction pour mettre à jour l'interface après upload réussi
    function updatePhotoInterface(photoPath) {
        const imagePreview = document.getElementById('imagePreview');
        const avatarPreview = document.getElementById('avatarPreview');
        const photoButtons = document.getElementById('photoButtons');
        
        // Mettre à jour l'image
        imagePreview.src = '/' + photoPath;
        imagePreview.style.display = 'block';
        imagePreview.classList.remove('d-none');
        avatarPreview.style.display = 'none';
        avatarPreview.classList.add('d-none');
        
        // Mettre à jour les boutons si c'était un nouveau personnage
        if (photoButtons.querySelector('.bi-camera')) {
            // C'était "Ajouter une photo", maintenant c'est "Changer la photo" + "Supprimer"
            photoButtons.innerHTML = `
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('photo').click()">
                    <i class="bi bi-arrow-repeat me-2"></i>Changer la photo
                </button>
                <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDeletePhoto()">
                    <i class="bi bi-trash me-2"></i>Supprimer
                </button>
            `;
        }
    }
    
    // Fonction pour gérer les erreurs d'upload
    function handleUploadError(errorMessage) {
        const imagePreview = document.getElementById('imagePreview');
        const avatarPreview = document.getElementById('avatarPreview');
        
        {% if personnage.photo is defined and personnage.photo %}
            // Restaurer l'image existante
            imagePreview.src = '/{{ personnage.photo }}';
            imagePreview.style.display = 'block';
            imagePreview.classList.remove('d-none');
            avatarPreview.style.display = 'none';
            avatarPreview.classList.add('d-none');
        {% else %}
            // Retour à l'avatar par défaut
            imagePreview.style.display = 'none';
            imagePreview.classList.add('d-none');
            imagePreview.src = '';
            avatarPreview.style.display = 'flex';
            avatarPreview.classList.remove('d-none');
        {% endif %}
        
        showTemporaryMessage(errorMessage, 'error');
    }
    
    // Fonction pour afficher des messages temporaires
    function showTemporaryMessage(message, type) {
        const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
        const iconClass = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
        
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
        alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
        alertDiv.innerHTML = `
            <i class="bi ${iconClass} me-2"></i>${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        document.body.appendChild(alertDiv);
        
        // Supprimer automatiquement après 3 secondes
        setTimeout(() => {
            if (alertDiv.parentNode) {
                alertDiv.remove();
            }
        }, 3000);
    }
    
    // Confirmation pour supprimer définitivement la photo
    function confirmDeletePhoto() {
        if (confirm('Êtes-vous sûr de vouloir supprimer définitivement cette photo ?')) {
            // Créer un formulaire pour la suppression
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/personnage/{{ personnage.id }}/supprimer-photo';
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
{% endblock %} 