</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Données des termes pour JavaScript
        const termesData = {
            {% for categorie, termes in categories %}
                {% for terme in termes %}
                    {{ terme.id }}: {
                        id: {{ terme.id }},
                        terme: "{{ terme.terme|escape('js') }}",
                        definition: "{{ terme.definition|escape('js') }}",
                        categorie: "{{ terme.categorie|default('général')|escape('js') }}",
                        livre_id: {{ terme.livre_id|default('null') }}
                    },
                {% endfor %}
            {% endfor %}
        };

        function showNewTermModal() {
            const modal = new bootstrap.Modal(document.getElementById('newTermModal'));
            modal.show();
        }

        function filterTerms() {
            const searchTerm = document.getElementById('searchTerm').value.toLowerCase();
            const termes = document.querySelectorAll('[data-term]');
            
            termes.forEach(terme => {
                const termText = terme.getAttribute('data-term');
                const termContent = terme.textContent.toLowerCase();
                
                if (termText.includes(searchTerm) || termContent.includes(searchTerm)) {
                    terme.style.display = 'block';
                } else {
                    terme.style.display = 'none';
                }
            });
            
            updateCategoryVisibility();
        }

        function filterByCategory() {
            const selectedCategory = document.getElementById('categoryFilter').value;
            const categories = document.querySelectorAll('.lexique-category');
            
            categories.forEach(category => {
                if (!selectedCategory || category.getAttribute('data-category') === selectedCategory) {
                    category.style.display = 'block';
                } else {
                    category.style.display = 'none';
                }
            });
        }

        function filterByBook() {
            const bookId = document.getElementById('bookFilter').value;
            if (bookId) {
                window.location.href = '{{ path("app_world_building_lexique") }}/' + bookId;
            } else {
                window.location.href = '{{ path("app_world_building_lexique") }}';
            }
        }

        function updateCategoryVisibility() {
            const categories = document.querySelectorAll('.lexique-category');
            
            categories.forEach(category => {
                const visibleTerms = category.querySelectorAll('[data-term]:not([style*="display: none"])');
                if (visibleTerms.length === 0) {
                    category.style.display = 'none';
                } else {
                    category.style.display = 'block';
                }
            });
        }

        function editTerm(termId) {
            const terme = termesData[termId];
            if (!terme) {
                alert('Terme introuvable');
                return;
            }

            // Marquer visuellement le terme en cours d'édition
            const termeCard = document.querySelector(`[data-term*="${terme.terme.toLowerCase()}"]`);
            if (termeCard) {
                termeCard.querySelector('.terme-card').classList.add('editing');
            }

            // Remplir le formulaire d'édition
            document.getElementById('edit_terme').value = terme.terme;
            document.getElementById('edit_definition').value = terme.definition;
            document.getElementById('edit_categorie').value = terme.categorie;
            document.getElementById('edit_livre_id').value = terme.livre_id || '';

            // Définir l'action du formulaire
            document.getElementById('editTermForm').action = '/world-building/terme/' + termId + '/edit';

            // Afficher le modal
            const modal = new bootstrap.Modal(document.getElementById('editTermModal'));
            modal.show();

            // Retirer la classe editing quand le modal se ferme
            const editModal = document.getElementById('editTermModal');
            const hideHandler = function() {
                if (termeCard) {
                    termeCard.querySelector('.terme-card').classList.remove('editing');
                }
                editModal.removeEventListener('hidden.bs.modal', hideHandler);
            };
            editModal.addEventListener('hidden.bs.modal', hideHandler);
        }

        function deleteTerm(termId) {
            const terme = termesData[termId];
            if (!terme) {
                alert('Terme introuvable');
                return;
            }

            const confirmMessage = `Êtes-vous sûr de vouloir supprimer le terme "${terme.terme}" ?\n\nDéfinition : ${terme.definition.substring(0, 100)}${terme.definition.length > 100 ? '...' : ''}\n\nCette action est irréversible.`;
            
            if (confirm(confirmMessage)) {
                // Marquer visuellement le terme en cours de suppression
                const termeCard = document.querySelector(`[data-term*="${terme.terme.toLowerCase()}"]`);
                if (termeCard) {
                    termeCard.querySelector('.terme-card').classList.add('deleting');
                }

                // Créer un formulaire temporaire pour la requête POST
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/world-building/terme/' + termId + '/delete';
                
                // Ajouter au DOM et soumettre
                document.body.appendChild(form);
                form.submit();
            }
        }

        function exportLexique() {
            // TODO: Implémenter l'export
            alert('Export en cours de développement');
        }

        function printLexique() {
            window.print();
        }

        function showHelpModal() {
            const modal = new bootstrap.Modal(document.getElementById('helpModal'));
            modal.show();
        }

        // Gestion des formulaires
        function resetNewTermForm() {
            document.getElementById('terme').value = '';
            document.getElementById('definition').value = '';
            document.getElementById('categorie').value = 'général';
            document.getElementById('livre_id').value = '{{ livre_actuel ? livre_actuel.id : "" }}';
        }

        // Animation d'apparition
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.terme-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 50);
            });

            // Réinitialiser le formulaire de nouveau terme quand le modal se ferme
            const newTermModal = document.getElementById('newTermModal');
            newTermModal.addEventListener('hidden.bs.modal', function () {
                resetNewTermForm();
            });

            // Ajouter des raccourcis clavier
            document.addEventListener('keydown', function(e) {
                // Échap pour fermer les modals
                if (e.key === 'Escape') {
                    const openModals = document.querySelectorAll('.modal.show');
                    openModals.forEach(modal => {
                        bootstrap.Modal.getInstance(modal)?.hide();
                    });
                }
                
                // Ctrl+N pour nouveau terme
                if ((e.ctrlKey || e.metaKey) && e.key === 'n') {
                    e.preventDefault();
                    showNewTermModal();
                }
                
                // Ctrl+P pour imprimer
                if ((e.ctrlKey || e.metaKey) && e.key === 'p') {
                    e.preventDefault();
                    printLexique();
                }
            });
        });
    </script>
{% endblock %} 